<div class="container-fluid">
	<div class="w100">
		<div class="bold f25 text-center white-text margin-b-10">Editar Conta Bancária</div>

		<form method="POST" action="" enctype="multipart/form-data">

			<input type="hidden" name="id" value="<%= data.conta_bancaria[0].id %>">

			<div class="row">
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="tipo">Banco</label>
						<div class="col-sm-10">
							<select name="id_banco" class="form-control">
								<%
								if (typeof data.bancos != 'undefined' && data.bancos.length > 0) {
									for (var i = 0; i < data.bancos.length; i++) { %>
									<option value=" <%= data.bancos[i].id %>" <%= data.conta_bancaria[0].id_banco == data.bancos[i].id ? 'selected' : '' %>><%= data.bancos[i].banco %></option>				
									<% }
								} %>
							</select>
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="id_usuario">Agência</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="text" name="agencia" value="<%= data.conta_bancaria[0].agencia%>">
						</div>
					</div>
				</div>
			</div>

			<div class="row">

				<div class="form-group col-md-8">
					<div class="row">
						<label class="white-text col-sm-2" for="valor">N° da Conta</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="text" name="numero_conta" value="<%= data.conta_bancaria[0].numero_conta %>">
						</div>
					</div>
				</div>

				<div class="form-group col-md-4">
					<div class="row">
						<label class="white-text col-sm-2" for="valor">Dígito</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="text" name="digito" maxlength="2" value="<%= data.conta_bancaria[0].digito %>">
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<label class="white-text padding-l-15">Tipo da Conta:</label>
				
				<div>
					<div class="form-check-inline white-text margin-l-10">
						<input class="form-check-input" type="radio" name="tipo_conta" id="radio_conta_corrente" value="0" <%= data.conta_bancaria[0].tipo_conta == 0 ? 'checked' : '' %>>
						<label class="form-check-label" for="radio_conta_corrente">
							Conta Corrente
						</label>
					</div>
					<div class="form-check-inline white-text">
						<input class="form-check-input" type="radio" name="tipo_conta" id="radio_conta_poupanca" value="1" <%= data.conta_bancaria[0].tipo_conta == 1 ? 'checked' : '' %>>
						<label class="form-check-label" for="radio_conta_poupanca">
							Conta Poupança
						</label>						
					</div>
				</div>
			</div>

			
			<% if (typeof data.tem_padrao != 'undefined' && data.tem_padrao.length > 0){ 
				%>
				<% if(data.conta_bancaria[0].padrao == 1){%>
				<div class="row margin-b-10">
					<div class="padding-l-15">
						<div class="form-check white-text padding-l-15">
							<label class="form-check-label" for="conta_bancaria_padrao">
								<input class="form-check-input" type="checkbox" value="1" id="conta_bancaria_padrao" name="padrao" checked>
								Esta é a minha conta padrão
							</label>
						</div>
					</div>
				</div>

				<%}%>

				<%}else{%>
				<div class="row margin-b-10">
					<div class="padding-l-15">
						<div class="form-check white-text padding-l-15">
							<label class="form-check-label" for="conta_bancaria_padrao">
								<input class="form-check-input" type="checkbox" value="1" id="conta_bancaria_padrao" name="padrao" <%= data.conta_bancaria[0].padrao == 1 ? 'checked' : '' %>>
								Esta é a minha conta padrão
							</label>
						</div>
					</div>
				</div>
				<%}%>




				<button data-href="/sistema/meus_dados/conta_bancaria/atualizar" data-action="<%= data.link_sistema%>/meus_dados/" class="btn primary ajax-submit margin-b-10" data-mensagem-sucesso="Conta Bancária Atualizada com Sucesso!" >
					Salvar <i class="far fa-save-o" aria-hidden="true"></i>
				</button>

			</form>
		</div>

	</div>