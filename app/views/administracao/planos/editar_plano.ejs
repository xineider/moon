<div>
	<%- include('../submenu'); %>
</div>

<%if(usuario.nivel == 1){ %>
<div class="container-fluid">
	<div class="w100 text-center">
		<div class="bold f25 text-center white-text margin-b-10">Editar Plano</div>

		<form method="POST" action="" enctype="multipart/form-data">
			<input type="hidden" name="id" value="<%= data.plano[0].id %>">

			<div class="row">
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="nome">Nome do Plano</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="text" name="nome" value="<%= data.plano[0].nome %>">
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="performance">Performance</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control" type="number" name="performance" value="<%= data.plano[0].performance %>">
						</div>
					</div>
				</div>
			</div>

			<button data-href="/sistema/administracao/plano/atualizar" data-action="<%= data.link_sistema%>/administracao/planos/" class="btn primary ajax-submit margin-b-10" data-mensagem-sucesso="Plano Atualizado com Sucesso!" >
				Salvar <i class="far fa-save-o" aria-hidden="true"></i>
			</button>

		</form>
	</div>

</div>

<%}else{%>
<div class="white-text text-center f25">Você não possui permissão para acessar esse conteúdo!</div>
<%}%>