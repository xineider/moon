<div>
	<%- include('../submenu'); %>
</div>


<div class="w100 text-center">
	<div class="bold f25 text-center white-text">
		Administração de Usuários
	</div>
	
	
	<%if(usuario.nivel == 1){ %>


	<div class="row text-center margin-b-10">
		<a class="btn primary ajax-load white-text mx-auto" href="<%= data.link_sistema%>/administracao/usuarios/criar">Cadastrar Usuário</a>
	</div>


	<div class="col s12">

		<table class="table-full-width tabela_filtrada text-center white-text">
			<thead class="primary-text">
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Nível</th>
					<th>Excluir</th>
				</tr>
			</thead>
			<tbody>

				<%
				if (typeof data.usuarios_admin != 'undefined' && data.usuarios_admin.length > 0) {
					for (var i = data.usuarios_admin.length - 1; i >= 0; i--) { %>
					<tr class="border-bottom-primary">
						<td>
							<a class="limitador_3_linhas break-all ajax-load white-text" href="<%= data.link_sistema%>/administracao/usuarios/editar/<%= data.usuarios_admin[i].id %>">
								<%= data.usuarios_admin[i].nome %> 
							</a>
						</td>
						<td>
							<a class="limitador_3_linhas ajax-load white-text break-all" href="<%= data.link_sistema%>/administracao/usuarios/editar/<%= data.usuarios_admin[i].id %>">
								<%= data.usuarios_admin[i].email %>
							</a>
						</td>
						<td>
							<a class="limitador_3_linhas ajax-load white-text" href="<%= data.link_sistema%>/administracao/usuarios/editar/<%= data.usuarios_admin[i].id %>">
								<% switch(data.usuarios_admin[i].nivel){
									case 1:%>
									Administrador
									<% break;
									case 2:%>
									Gerente
									<%break;
									case 3:%>
									Usuário
									<%break;}%>
								</a>
							</td>
							<td style="width: 30%;" class="center">
								<% if(usuario.nivel == 1){ %>
								<div class="btn primary modal-remover-mount" data-href="#modaldeletar" data-id="<%= data.usuarios_admin[i].id %>" data-texto="Você tem certeza que quer deletar '<%= data.usuarios_admin[i].nome %>'? " data-to="/sistema/administracao/usuarios/desativar" data-back="<%= data.link_sistema%>/administracao/usuarios">
									<i class="fas fa-times white-text"></i>
								</div>

								<% } %>
							</td>

						</tr>

						<%}
					}else{%>
					<tr>
						<td colspan="5" class="center">Não há usuários no momento</td>
					</tr>
					<%}%>
				</tbody>

			</table>
		</div>





		<%}else{%>
		<div class="card light">Você não possui permissão para acessar esse conteúdo</div>
		<%}%>

	</div>