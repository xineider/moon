<div class="col s12 center">
	<div class="w90 center-align gold margin-center padding-5 border-radius-5 f20">Aprovação de Aporte</div>
	
	
	<%if(usuario.nivel == 4 || usuario.nivel == 5){ %>


	<div class="row margin-t-20">
		<div class="input-field col s12">
			<label class="gold-text" for="titulo">Nome</label>
			<input type="text" class="border-gold border-radius-5 white-text" disabled value="<%= data[0].nome %>">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s12">
			<label class="gold-text" for="titulo">Perfil</label>
			<input type="text" class="border-gold border-radius-5 white-text" disabled value="<%= data[0].plano %>">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s12">
			<label class="gold-text" for="titulo">QTD. BTC</label>
			<input type="text" class="border-gold border-radius-5 white-text" disabled value="<%= data[0].qtd_btc %>">
		</div>
	</div>

	<%if(data[0].arquivo!=undefined){%>
	<div class="input-field col s12">
		<a download class="btn gold" href="<%= data[0].arquivo %>">Baixar Comprovante</a>					
	</div>

	<div>OU</div>

	<input type="hidden" name="arquivo" value="<%= data[0].arquivo %>">

	<div class="input-field col s12">
		<button class="btn gold ajax-submit-update-mensagem" data-href="<%= data.link_sistema%>/administracao/pedido-aporte/enviar-email" data-action="" data-mensagem-sucesso="Email Enviado com Sucesso!">Enviar para o meu E-mail</button>
	</div>


	<%}else{%>
	<div class="center margin-b-10">Cliente não enviou comprovante!</div>
	<%}%>

	<div class="center-align">

		<a class="btn red border-radius-5 ajax-load-to margin-t-10 white-text margin-l-10" href="<%= data.link_sistema%>/administracao/pedido-aporte/negacao_aporte_motivo/<%= data[0].id %>" data-to="container_aprovacao_negacao_aporte">
			Negar Aporte
		</a>

		<a class="btn gold ajax-load-to margin-t-10 margin-l-10" href="<%= data.link_sistema%>/administracao/pedido-aporte/aprovacao_aporte_data_hora/<%= data[0].id %>" data-to="container_aprovacao_negacao_aporte">
			Aprovar Aporte
		</a>
	</div>

<!-- 		<button data-href="/sistema/administracao/pedido-aporte/confirmar" data-action="<%= data.link_sistema%>/administracao/pedidos-aportes/" class="btn gold ajax-submit-update-mensagem margin-b-10" data-mensagem-sucesso="Aporte Aprovado com Sucesso!">
			Aprovar Aporte <i class="far fa-save-o" aria-hidden="true"></i>
		</button> -->

		<div class="container_aprovacao_negacao_aporte"></div>





		<%}else{%>
		<div class="card light">Você não possui permissão para acessar esse conteúdo</div>
		<%}%>

	</div>