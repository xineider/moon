<%- include('../../includes/menu_header'); %>
<div>
	<%- include('../submenu'); %>
</div>

<%if(usuario.nivel == 1){ %>
<div class="container-fluid">
	<div class="w100 text-center">
		<div class="bold f25 text-center white-text margin-b-10">Editar Caixa</div>

		<form method="POST" action="" enctype="multipart/form-data">

			<input type="hidden" name="id" value="<%= data.caixa[0].id %>">
			<div class="row">
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="tipo">Tipo</label>
						<div class="col-sm-10">
							<select name="tipo" class="form-control">
								<option value="0" <%= data.caixa[0].tipo == 0 ? 'selected' : '' %>>Aporte</option>
								<option value="1" <%= data.caixa[0].tipo == 1 ? 'selected' : '' %>>Saque</option>
								<option value="2" <%= data.caixa[0].tipo == 2 ? 'selected' : '' %>>Rendimento</option>
								<option value="3" <%= data.caixa[0].tipo == 3 ? 'selected' : '' %>>Saque rendimento</option>
								<option value="4" <%= data.caixa[0].tipo == 4 ? 'selected' : '' %>>Reaporte</option>
							</select>
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="id_plano">Plano</label>
						<div class="col-sm-10">
							<select name="id_plano" class="form-control">
								<%
								if (typeof data.plano != 'undefined' && data.plano.length > 0) {
									for (var i = 0; i < data.plano.length; i++) { %>
									<option value=" <%= data.plano[i].id %>" <%= data.caixa[0].id_plano == data.plano[i].id ? 'selected' : '' %> ><%= data.plano[i].nome %></option>				
									<% }
								} %>
							</select>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="id_usuario">Usuário</label>
						<div class="col-sm-10">
							<select name="id_usuario" class="form-control">
								<%
								if (typeof data.usuario != 'undefined' && data.usuario.length > 0) {
									for (var i = 0; i < data.usuario.length; i++) { %>
									<option value="<%= data.usuario[i].id %>" <%= data.caixa[0].id_usuario == data.usuario[i].id ? 'selected' : '' %>><%= data.usuario[i].nome %></option>				
									<% }
								} %>
							</select>
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label class="white-text col-sm-2" for="valor">Valor em Reais</label>
						<div class="col-sm-10">
							<input required="true" class="validate form-control " type="number" name="valor" value="<%= data.caixa[0].valor %>">
						</div>
					</div>
				</div>
			</div>

			<div class="row">

				<div class="form-group col-md-12">
					<div class="row">
						<label class="white-text col-sm-1" for="data">Data</label>
						<div class="col-sm-11">
							<input required="true" class="validate form-control datepicker data-sem-hora" type="text" name="data" value="<%= data.caixa[0].data %>">
						</div>
					</div>
				</div>
			</div>


			<button data-href="/sistema/administracao/caixa/atualizar" data-action="<%= data.link_sistema%>/administracao/caixa/" class="btn primary ajax-submit margin-b-10" data-mensagem-sucesso="Caixa Atualizado com Sucesso!" >
				Salvar <i class="far fa-save-o" aria-hidden="true"></i>
			</button>

		</form>
	</div>

</div>

<%}else{%>
<div class="white-text text-center f25">Você não possui permissão para acessar esse conteúdo!</div>
<%}%>