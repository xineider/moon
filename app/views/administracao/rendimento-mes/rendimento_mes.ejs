<%- include('../../includes/menu_header'); %>
<div>
	<%- include('../submenu'); %>
</div>


<div class="w100 text-center">
	<div class="bold f25 text-center white-text">
		Administração do Rendimento do Mês
	</div>
	
	
	<%if(usuario.nivel == 1){ %>


	<div class="text-center margin-b-10 margin-t-10">
		<a class="btn primary ajax-load white-text mx-auto" href="<%= data.link_sistema%>/administracao/caixa/criar">Cadastrar Rendimento do Mês</a>
	</div>


	<div class="col s12">

		<table class="tabela_filtrada text-center white-text margin-center">
			<thead class="primary-text">
				<tr>
					<th>Porcentagem</th>
					<th>Mês</th>
				</tr>
			</thead>
			<tbody>

				<%
				if (typeof data.rendimento_mes != 'undefined' && data.rendimento_mes.length > 0) {
					for (var i = data.rendimento_mes.length - 1; i >= 0; i--) { %>
					<tr class="border-bottom-primary">
						<td>
							<a class="white-text">
									<span class="d-none"><%= data.rendimento_mes[i].porcentagem_number %></span>
								<%= data.rendimento_mes[i].porcentagem_mes %>% 
							</a>
						</td>
						<td>
							<a class="white-text">
								<span class="d-none"><%= data.rendimento_mes[i].mes_table_filtro %></span>							
								<%= data.rendimento_mes[i].nome_mes %> 
							</a>
						</td>

					</tr>

					<%}
				}else{%>
				<tr>
					<td colspan="6" class="center">Não há rendimento de mês no momento</td>
				</tr>
				<%}%>
			</tbody>

		</table>
	</div>





	<%}else{%>
	<div class="white-text text-center f25">Você não possui permissão para acessar esse conteúdo!</div>
	<%}%>

</div>