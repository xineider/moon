    <div class="card-panel white">
  		<h4>Criar Usuário</h4>
      <form method="POST" action="" enctype="multipart/form-data">
        <div class="right-align">
          <a href="/sistema/usuarios/" class="btn-floating btn-large waves-effect waves-light blue darken-2 left ajax-load"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
          <button data-href="/sistema/usuarios/cadastrar/" data-action="/sistema/usuarios/" class="btn-floating btn-large waves-effect waves-light blue darken-2 ajax-submit">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
          </button>
        </div>
        <div class="row">
          <div class="input-field col s12 m6">
            <input required="true" class="validate" type="text" name="login">
            <label for="nome">Login</label>
          </div>
          <div class="input-field col s12 m6">
            <input required="true" class="validate" type="text" name="nome">
            <label for="nome">Nome</label>
          </div>
          <div class="input-field col s12 m6">
            <input required="true" class="validate" type="text" name="email">
            <label for="email">Email</label>
          </div>
          <div class="input-field col s12 m6">
            <input required="true" class="validate" type="tel" name="telefone">
            <label for="telefone">Telefone</label>
          </div>
          <div class="col s12 m6">
            <label>Nível</label>
            <select required="true" class="browser-default" name="nivel">
              <option value="" disabled selected>Selecione</option>
              <option value="1">Administrador</option>
              <option value="2">Gerente</option>
              <option value="3">Funcionário</option>
            </select>
          </div>
          <div class="col s12 m6">
            <label>Setor</label>
            <select required="true" class="browser-default">
              <option value="" disabled selected>Selecione</option>
              <%
              if (typeof data.setores != 'undefined' && data.setores.length > 0) {
                for (var i = data.setores.length - 1; i >= 0; i--) {
              %>
              <option value="<%= data.setores[i].id %>"><%= data.setores[i].nome %></option>
              <%
                }
              }
              %>
            </select>
            <input type="hidden" name="id_setor" value="2">
               <input hidden name="hash_login" value="0">
          </div>
        </div>
        <div class="right-align">
          <button data-href="/sistema/usuarios/cadastrar/" data-action="/sistema/usuarios/" class="btn waves-effect waves-light blue darken-2 ajax-submit">
            Salvar <i class="fa fa-floppy-o" aria-hidden="true"></i>
          </button>
        </div>
      </form>
  	</div>
